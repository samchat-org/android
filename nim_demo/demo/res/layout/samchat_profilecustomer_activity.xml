<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/samchat_color_main_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                android:visibility="gone"/>
            <FrameLayout
                android:id="@+id/back_arrow_layout"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_centerVertical="true"
                android:background="@drawable/samchat_action_bar_button_selector_customer">
                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/title_left_margin"
                    android:layout_marginStart="@dimen/title_left_margin"
                    android:layout_marginRight="@dimen/title_right_margin"
                    android:layout_marginEnd="@dimen/title_left_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/samchat_ic_nav_light_close"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/titlebar_name"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_centerVertical="true"
                android:gravity="start|center_vertical"
                android:text="@string/samchat_my_profile"
                android:layout_toRightOf="@id/back_arrow_layout"
                android:layout_toEndOf="@id/back_arrow_layout"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/samchat_color_customer_titlbar_title"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/samchat_color_split_line"/>
        <RelativeLayout
            android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/wall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@null"/>
            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/samchat_avatar_size_in_namecard"
                android:layout_height="@dimen/samchat_avatar_size_in_namecard"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/samchat_color_avatar_border_default"
                app:civ_border_width="2dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="@dimen/body_left_margin"
            android:paddingStart="@dimen/body_left_margin"
            android:paddingRight="@dimen/body_right_margin"
            android:paddingEnd="@dimen/body_right_margin"
            android:background="@color/samchat_color_white"
            android:textColor="@color/samchat_color_grey"
            android:textSize="@dimen/text_size_16"
            android:text="@string/samchat_contact_details"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/samchat_color_white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/username_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/body_left_margin"
                android:layout_marginStart="@dimen/body_left_margin"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/samchat_ic_input_user_hint"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/username_img"
                android:layout_toEndOf="@id/username_img"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin"
                android:background="@null"
                android:maxLines="1"
                android:gravity="start|center_vertical"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/samchat_color_ink"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/username"
                android:layout_alignStart="@+id/username"
                android:background="@color/samchat_color_grey"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/samchat_list_item_selector"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/body_left_margin"
                android:layout_marginStart="@dimen/body_left_margin"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/samchat_ic_input_phone_hint"/>
            <LinearLayout
                android:id="@+id/cp_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/phone_img"
                android:layout_toEndOf="@id/phone_img"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/countrycode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLines="1"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/samchat_color_ink"/>
                <TextView
                    android:id="@+id/phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@null"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/samchat_color_ink"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/cp_layout"
                android:layout_alignStart="@+id/cp_layout"
                android:background="@color/samchat_color_grey"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/samchat_list_item_selector"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/email_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/body_left_margin"
                android:layout_marginStart="@dimen/body_left_margin"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/samchat_ic_input_email_hint"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/email_img"
                android:layout_toEndOf="@id/email_img"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin"
                android:background="@null"
                android:maxLines="1"
                android:gravity="start|center_vertical"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/samchat_color_ink"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:background="@color/samchat_color_grey"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/samchat_list_item_selector"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/address_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/body_left_margin"
                android:layout_marginStart="@dimen/body_left_margin"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:src="@drawable/samchat_ic_input_location_hint"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/address_img"
                android:layout_toEndOf="@id/address_img"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin"
                android:background="@null"
                android:maxLines="2"
                android:gravity="start|center_vertical"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/samchat_color_ink"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>