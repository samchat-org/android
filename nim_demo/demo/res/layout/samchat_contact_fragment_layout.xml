<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/customer_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/customer_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/samchat_text_radius_border"
            android:text="@string/search"
            android:textSize="@dimen/text_size_20"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <RelativeLayout
            android:id="@+id/customer_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/customer_contact_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" >
            </ListView>

            <TextView
                android:id="@+id/customer_dialog"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:background="@drawable/show_head_toast_bg"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.android.samchat.ui.SideBar
                android:id="@+id/customer_sidebar"
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sp_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sp_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/samchat_text_radius_border"
            android:text="@string/search"
            android:textSize="@dimen/text_size_20"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <RelativeLayout
            android:id="@+id/sp_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/sp_contact_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" >
            </ListView>

            <TextView
                android:id="@+id/sp_dialog"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:background="@drawable/show_head_toast_bg"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.android.samchat.ui.SideBar
                android:id="@+id/sp_sidebar"
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>