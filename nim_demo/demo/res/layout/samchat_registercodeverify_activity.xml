<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/welcome_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/samchat_color_main_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/samchat_color_customer_titlebar_bg">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:visibility="gone"/>
        <FrameLayout
            android:id="@+id/back_arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/samchat_action_bar_button_selector_customer">
            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/title_left_margin"
                android:layout_marginStart="@dimen/title_left_margin"
                android:layout_marginRight="@dimen/title_right_margin"
                android:layout_marginEnd="@dimen/title_right_margin"
                android:src="@drawable/samchat_ic_nav_light_close"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="@dimen/title_right_margin"
            android:layout_marginEnd="@dimen/title_right_margin"
            android:layout_toRightOf="@id/back_arrow_layout"
            android:layout_toEndOf="@id/back_arrow_layout">
            <TextView
                android:id="@+id/titlebar_name"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/samchat_signup"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/samchat_color_dark_blue"/>
            <com.android.samchat.ui.ProgressIndicationBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:defaultColor="@color/samchat_color_light_grey"
                app:selectColor="@color/samchat_color_green"
                app:circleRadius="6dp"
                app:lineHeight="1dp"
                app:lineWidth="12dp"
                app:curSelect="1"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/samchat_color_split_line"/>
    <TextView
        android:id="@+id/phoneWithCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_19"
        android:textColor="@color/samchat_color_ingra"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_19"
        android:textColor="@color/samchat_color_ingra"
        android:text="@string/samchat_code_verify_desc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.android.samchat.ui.CircleEditText
                android:id="@+id/code_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:textColor="@color/samchat_color_white"
                android:textCursorDrawable="@null"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@null"
                app:emptyColor="@color/samchat_color_mid_grey"
                app:solidColor="@color/samchat_color_lime"
                app:ringColor="@color/samchat_color_lemmon"
                app:ringWidth="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.android.samchat.ui.CircleEditText
                android:id="@+id/code_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:textColor="@color/samchat_color_white"
                android:textCursorDrawable="@null"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@null"
                app:emptyColor="@color/samchat_color_mid_grey"
                app:solidColor="@color/samchat_color_lime"
                app:ringColor="@color/samchat_color_lemmon"
                app:ringWidth="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.android.samchat.ui.CircleEditText
                android:id="@+id/code_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/samchat_color_white"
                android:textCursorDrawable="@null"
                android:maxLength="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@null"
                app:emptyColor="@color/samchat_color_mid_grey"
                app:solidColor="@color/samchat_color_lime"
                app:ringColor="@color/samchat_color_lemmon"
                app:ringWidth="2dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.android.samchat.ui.CircleEditText
                android:id="@+id/code_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:textColor="@color/samchat_color_white"
                android:textCursorDrawable="@null"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="number"
                android:background="@null"
                app:emptyColor="@color/samchat_color_mid_grey"
                app:solidColor="@color/samchat_color_lime"
                app:ringColor="@color/samchat_color_lemmon"
                app:ringWidth="2dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/indication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_grey_999999"
            android:text="@string/samchat_resend_code_in"/>
        <TextView
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_grey_999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_grey_999999"
            android:text="@string/samchat_resend_code_seconds"/>
    </LinearLayout>
</LinearLayout>