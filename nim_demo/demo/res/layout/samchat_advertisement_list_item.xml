<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/color_white_ffffffff"
        android:textStyle="bold"
        android:background="@drawable/nim_bg_message_tip"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/avatar_size_default"
            android:layout_height="@dimen/avatar_size_default"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/avatar_def"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_head"
            android:layout_toEndOf="@id/img_head"
            android:layout_alignTop="@id/img_head">
            <TextView
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical|left"
                android:includeFontPadding="false"
                android:lineSpacingExtra="3dip"
                android:maxWidth="@dimen/max_text_bubble_width"
                android:textColor="@color/color_black_b3000000"
                android:textSize="16sp"
                android:background="@drawable/nim_message_left_white_bg"/>
            <FrameLayout
                android:id="@+id/content_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingStart="5dp"
                android:paddingRight="2dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="start"
                android:background="@drawable/nim_message_left_white_bg">
                <com.netease.nim.uikit.common.ui.imageview.MsgThumbImageView
                    android:id="@+id/content_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/empty"
                    android:gravity="center"
                    android:padding="0dip"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>