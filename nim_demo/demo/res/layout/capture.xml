<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/titlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/samchat_color_customer_titlebar_bg">
        <FrameLayout
            android:id="@+id/back_arrow_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/samchat_action_bar_button_selector_customer">
            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/title_left_margin"
                android:layout_marginStart="@dimen/title_left_margin"
                android:layout_marginRight="@dimen/title_right_margin"
                android:layout_marginEnd="@dimen/title_right_margin"
                android:src="@drawable/samchat_ic_nav_light_close"
                android:layout_gravity="center"
                android:contentDescription="@null"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/back_arrow_layout"
            android:layout_toEndOf="@+id/back_arrow_layout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/titlebar_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|start"
                android:textColor="@color/samchat_color_customer_titlbar_title"
                android:textSize="@dimen/text_size_20"
                android:text="@string/samchat_qr_scanner"/>
            <FrameLayout
                android:id="@+id/titlebar_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/samchat_action_bar_button_selector_customer">
                <TextView
                    android:id="@+id/titlebar_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/title_left_margin"
                    android:layout_marginStart="@dimen/title_left_margin"
                    android:layout_marginRight="@dimen/title_right_margin"
                    android:layout_marginEnd="@dimen/title_right_margin"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/samchat_color_customer_titlbar_title"
                    android:textSize="@dimen/text_size_16"
                    android:text="@string/samchat_qr_scanner"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/scanner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 整体透明画布 -->
        <SurfaceView
            android:id="@+id/preview_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <!-- 扫描取景框 -->
        <com.karics.library.zxing.view.ViewfinderView
            android:id="@+id/viewfinder_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/myqrcode_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/samchat_color_main_bg"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/samchat_color_split_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="@dimen/body_left_margin"
                android:layout_marginStart="@dimen/body_left_margin"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin"
                android:orientation="vertical"
                android:background="@drawable/samchat_qr_code_shadow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="@dimen/body_left_margin"
                    android:layout_marginStart="@dimen/body_left_margin"
                    android:layout_marginRight="@dimen/body_right_margin"
                    android:layout_marginEnd="@dimen/body_right_margin">
                    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                        android:id="@+id/avatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:civ_border_color="@color/samchat_color_avatar_border_default"
                        app:civ_border_width="2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_marginRight="@dimen/body_right_margin"
                        android:layout_marginEnd="@dimen/body_right_margin"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/samchat_color_ingra"
                            android:textSize="@dimen/text_size_20"
                            android:maxLines="1"/>
                        <TextView
                            android:id="@+id/service_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/samchat_color_dark_grey"
                            android:textSize="@dimen/text_size_16"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/samchat_color_grey"
                    android:layout_marginLeft="@dimen/body_left_margin"
                    android:layout_marginStart="@dimen/body_left_margin"
                    android:layout_marginRight="@dimen/body_right_margin"
                    android:layout_marginEnd="@dimen/body_right_margin"/>
                <ImageView
                    android:id="@+id/qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@null"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>