<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/samchat_background_dark_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="95dp"
        android:contentDescription="@null"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/samchat_bg_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countrycode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/samchat_color_white"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                    android:id="@+id/logininput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:hint="@string/samchat_username_or_phone"
                    android:textColorHint="@color/samchat_color_hint_white"
                    android:background="@null"
                    android:textColor="@color/samchat_color_filled_white"
                    android:textSize="@dimen/text_size_16"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/samchat_color_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/hidden_layout"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/hidden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/samchat_ic_showpw_hint"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:inputType="textVisiblePassword"
                    android:maxLength="32"
                    android:maxLines="1"
                    android:hint="@string/samchat_enter_password"
                    android:textColorHint="@color/samchat_color_hint_white"
                    android:background="@null"
                    android:textColor="@color/samchat_color_filled_white"
                    android:textSize="@dimen/text_size_16"
                    android:textCursorDrawable="@null"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/samchat_color_grey"/>
            <TextView
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/samchat_text_radius_border_grey"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/samchat_color_white"
                android:text="@string/samchat_signin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/signup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/samchat_signup"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@drawable/samchat_text_white_color"/>
                <TextView
                    android:id="@+id/forgot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/samchat_forgot_pwd"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@drawable/samchat_text_white_color"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>