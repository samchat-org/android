<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/samchat_color_main_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/avatar_layout"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/wall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1px"
                    android:scaleType="fitXY"
                    android:contentDescription="@null"/>
                <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/samchat_avatar_size_in_namecard"
                    android:layout_height="@dimen/samchat_avatar_size_in_namecard"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/samchat_color_grey"/>
            <LinearLayout
                android:id="@+id/customer_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/customer_my_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_input_user_hint"
                        android:id="@+id/imageView3" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_profile_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_myprofile"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_profile_lable"
                            android:layout_alignStart="@id/my_profile_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/customer_my_qrcode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_scan"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_qr_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_qr_code"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_qr_lable"
                            android:layout_alignStart="@id/my_qr_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/customer_change_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_input_user_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_cs_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_change_password"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_cs_lable"
                            android:layout_alignStart="@id/my_cs_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/customer_notificaition_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_list_notification_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_no_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_notification"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_no_lable"
                            android:layout_alignStart="@id/my_no_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/customer_logout_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_input_user_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_lo_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_logout"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_lo_lable"
                            android:layout_alignStart="@id/my_lo_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/customer_clear_cache_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_input_user_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_cl_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_clear_cache"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/samchat_color_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/samchat_color_grey"/>
                <LinearLayout
                    android:id="@+id/customer_create_sp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:id="@+id/create_sp_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_tab_account_sp_hint"/>
                    <TextView
                        android:id="@+id/create_sp_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/samchat_color_ink"
                        android:textSize="@dimen/text_size_16"
                        android:text="@string/samchat_create_sp"/>
                    <TextView
                        android:id="@+id/learn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/body_right_margin"
                        android:layout_marginEnd="@dimen/body_right_margin"
                        android:text="@string/samchat_learn_more"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/samchat_color_white"
                        android:background="@drawable/samchat_button_green_active"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/samchat_color_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/samchat_color_grey"/>
                <LinearLayout
                    android:id="@+id/customer_about_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@color/samchat_color_white">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_input_user_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_ab_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_aboutSamchat"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_ab_lable"
                            android:layout_alignStart="@id/my_ab_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/customer_faq_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@color/samchat_color_white">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_input_user_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/my_faq_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/samchat_color_ink"
                        android:textSize="@dimen/text_size_16"
                        android:text="@string/samchat_faq"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/samchat_color_grey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sp_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/sp_my_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_tab_account_sp_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_sprofile_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_service_profile"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_sprofile_lable"
                            android:layout_alignStart="@id/my_sprofile_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sp_my_qrcode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_scan"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_sqr_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_qr_code"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/my_sqr_lable"
                            android:layout_alignStart="@id/my_sqr_lable"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sp_subscription_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:id="@+id/sp_subscription_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_list_subscription_hint"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:id="@+id/sp_subscription_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_service_subscription"/>
                        <TextView
                            android:id="@+id/sp_learn_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/body_right_margin"
                            android:layout_marginEnd="@dimen/body_right_margin"
                            android:text="@string/samchat_learn_more"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/samchat_color_white"
                            android:background="@drawable/samchat_button_green_active"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/sp_subscription_text"
                            android:layout_alignStart="@id/sp_subscription_text"
                            android:background="@color/samchat_color_grey"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sp_switch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/samchat_list_item_selector">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/body_left_margin"
                        android:layout_marginStart="@dimen/body_left_margin"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@drawable/samchat_ic_list_switch_hint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/my_swi_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/samchat_color_ink"
                            android:textSize="@dimen/text_size_16"
                            android:text="@string/samchat_switch_to_personal_account"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/samchat_color_grey"/>
            </LinearLayout>
    </LinearLayout>


</ScrollView>
