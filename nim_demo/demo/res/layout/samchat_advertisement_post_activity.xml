<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/welcome_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/color_grey_efeff4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_black_13243F">
            <FrameLayout
                android:id="@+id/back_arrow_layout"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="@dimen/body_left_margin"
                android:layout_marginStart="@dimen/body_left_margin"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin">
                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/samchat_arrow_left_sp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <TextView
                android:id="@+id/titlebar_name"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/samchat_new_post"
                android:textSize="20sp"
                android:textColor="@color/color_white_ffffffff"/>
            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginRight="@dimen/body_right_margin"
                android:layout_marginEnd="@dimen/body_right_margin"
                android:gravity="center_vertical"
                android:text="@string/samchat_post"
                android:textSize="20sp"
                android:textColor="@color/color_grey_d8d2e2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/body_left_margin"
            android:layout_marginStart="@dimen/body_left_margin"
            android:layout_marginRight="@dimen/body_right_margin"
            android:layout_marginEnd="@dimen/body_right_margin">
            <ImageView
                android:id="@+id/select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/samchat_advertisement_post_photo_icon"/>
        </LinearLayout>
        <EditText
            android:id="@+id/adv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/body_left_margin"
            android:layout_marginStart="@dimen/body_left_margin"
            android:layout_marginRight="@dimen/body_right_margin"
            android:layout_marginEnd="@dimen/body_right_margin"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textSize="18sp"
            android:background="@null"
            android:hint="@string/samchat_hint_adv_text"/>
        <com.netease.nim.uikit.common.ui.imageview.ImageViewEx
            android:id="@+id/image_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/body_left_margin"
            android:layout_marginStart="@dimen/body_left_margin"
            android:layout_marginRight="@dimen/body_right_margin"
            android:layout_marginEnd="@dimen/body_right_margin"
            android:contentDescription="@null"/>
    </LinearLayout>
</ScrollView>